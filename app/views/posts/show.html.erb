

<h1><%= @post.title %></h1>
<h6><%= @post.created_at.to_s(:long) %></h6>

<h4><%= @post.body %></h4>


<p><%= link_to "Add a comment!", new_post_comment_path(@post), id: "new_comment", remote: :true %></p>
<% if @post.comments.any? %>
  <h4>Here are the COMMENTS for this POST!!:</h4>
  <ul>
    <% @post.comments.each do |comment| %>
    <li>
      <p>Commenter: <%= comment.commenter %> | <%= comment.created_at.to_s(:long) %></p>
        <%= comment.comment %>
        <%= link_to "Edit", edit_post_comment_path(@post, comment), id: "edit_comment", remote: :true %> |
        <%= link_to "Delete", post_comment_path(@post, comment),
                              :data => {:confirm => "REALLY?",
                                :method => "delete"} %>
      <hr>
    </li>
    <% end %>
  </ul>

<% else %>

  <h5>There are no comments yet!</h5>
<% end %>

<p><%= link_to "RETURN TO POSTS!!", posts_path %></p>
<p><%= link_to "EDIT POST!!", edit_post_path(@post) %></p>
<p><%= link_to "DELETE POST!!", post_path(@post),
                                :data =>{ :confirm => "REALLY?!",
                                  :method => 'delete' } %></p>
